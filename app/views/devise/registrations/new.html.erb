
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="registration-container">
  <ul class="registration-list">

    <li class="basic">
    <div><%= f.label :name %><br />
    <dive class="search-box">
      <%= f.text_field :name, :autofocus => true, placeholder:"Freddy Kruegger" %></div>
      <div class="search-box"><%= f.label :address %><br />
      <%= f.text_field :address, :autofocus => true, placeholder:"100 Memory Lane" %></div>
      <div class="search-box"><%= f.label :city %><br />
      <%= f.text_field :city_state, :autofocus => true, placeholder:"Boston, MA" %></div>
    </li>

    <li class="registration-photo">
      <div>IMAGE HERE</div>
      <div><%= f.label :up_load_image %><br />
      <%= f.text_field :image, :autofocus => true %></div>
    </li>

    <li class="registration-passwords">
      <div><%= f.label :email %><br />
      <%= f.email_field :email, :autofocus => true, placeholder:"haunt@urdreams.com" %></div>
      <div><%= f.label :password %><br />
      <%= f.password_field :password, placeholder:"********" %></div>
      <div><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, placeholder:"********"  %></div>
    </li>
  </ul>
  
  <div>
    <%= f.submit "Join", class: "registration-button" %>
  </div>
</div>

<% end %>

<%= render "devise/shared/links" %>
